<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_actividad6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.atack08.prom.Actividad6"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableRow>
            <TextView
                android:text="Cámara 1:"
                android:textSize="18dp"/>

            <Switch android:id="@+id/switchCamara1"
                android:layout_gravity="left"
                android:checked="true"/>

        </TableRow>

        <TableRow>
            <TextView
                android:text="Luz 1:"
                android:textSize="18dp"/>

            <Switch android:id="@+id/switchLuz1"
                android:layout_gravity="left"
                android:checked="false"
                />

        </TableRow>

        <TableRow>
            <TextView
                android:text="Cámara 2:"
                android:textSize="18dp"
                android:layout_gravity="center_vertical"
                android:textColor="#2196F3"/>

            <ToggleButton android:id="@+id/toggleCamara2"
                android:layout_gravity="left"
                android:textOn="SI"
                android:textOff="NO"
                android:checked="true" />

        </TableRow>

        <TableRow>
            <TextView
                android:text="Luz 2:"
                android:textSize="18dp"
                android:layout_gravity="center_vertical"
                android:textColor="#2196F3"/>

            <ToggleButton android:id="@+id/toggleLuz2"
                android:layout_gravity="left"
                android:textOn="SI"
                android:textOff="NO"
                android:checked="false"/>

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:weightSum="1">

        <ImageView android:id="@+id/imagenCamara1"
            android:layout_width="wrap_content"
            android:layout_height="79dp"
            android:src="@mipmap/ic_launcher_camara"
            android:layout_weight="0.19" />

        <ImageView android:id="@+id/imagenLuz1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher_bombilla"
            android:visibility="invisible"
            android:layout_weight="0.19" />

        <ImageView android:id="@+id/imagenCamara2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher_camara"
            android:layout_weight="0.19" />

        <ImageView android:id="@+id/imagenLuz2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher_bombilla"
            android:visibility="invisible"
            android:layout_weight="0.19" />


    </LinearLayout>


</LinearLayout>
